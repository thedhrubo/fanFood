<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_bg_signin"
    android:orientation="vertical">

    <ImageView
        android:visibility="gone"
        android:id="@+id/signin_img_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fanfood_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/signin_img_imageView1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_top"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            <requestFocus />
            </ImageView>

            <TextView
                android:visibility="gone"
                android:id="@+id/login_logoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Order and skip the lines!"
                android:textSize="18dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/signin_img_imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_user_icon" />

            <Button
                android:id="@+id/signin_btn_id_createNew"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/signin_btn_txt_marginTop_createnew"
                android:text="@string/btn_txt_signin_createnew"
                android:textColor="@color/actionbar_backgrounf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.4"
                    android:background="@color/actionbar_backgrounf"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/txt_signup_or"
                    android:textSize="@dimen/txt_or_six" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.4"
                    android:background="@color/actionbar_backgrounf"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/mainLogin_txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/txt_signup_marginTop"
                android:text="@string/btn_txt_intro_signin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/actionbar_backgrounf"
                android:textSize="@dimen/signin_Titlesiz" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_marginLeft"
                    android:layout_marginRight="@dimen/main_marginRight"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/signin_edittxt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/editTxt_input_margin_top"
                            android:background="@drawable/edittxt_default_bg"
                            android:hint="@string/txt_signin_email"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:padding="@dimen/activity_input_pading"
                            android:textSize="@dimen/editTxt_default_six" />

                        <EditText
                            android:id="@+id/signin_edittxt_passwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/editTxt_input_margin_top"
                            android:background="@drawable/edittxt_default_bg"
                            android:hint="@string/txt_signin_passwd"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:padding="@dimen/activity_input_pading"
                            android:textSize="@dimen/editTxt_default_six" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5">
                            <CheckBox
                                android:id="@+id/login_rememberLogin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="1dp"
                                android:textSize="14sp"
                                android:text="Remember"
                                android:textColor="@color/actionbar_backgrounf"
                                android:textStyle="bold"
                                android:typeface="sans" />
                            </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|right"
                            android:layout_weight="0.5">
                            <Button
                                android:id="@+id/signin_btn_id_forget"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textSize="14sp"
                                android:text="@string/btn_txt_signin_forgetpass"
                                android:textColor="@color/actionbar_backgrounf" />

                            </LinearLayout>
                            </LinearLayout>

                        <Button
                            android:id="@+id/signin_btn_id_signin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/btn_default"
                            android:shadowColor="@color/btn_b_textshadow_default"
                            android:shadowDx="1.5"
                            android:shadowDy="1.5"
                            android:shadowRadius="3"
                            android:text="@string/btn_txt_lofin"
                            android:textColor="@color/btn_txt_color_default" />
                        <Button
                            android:id="@+id/guest_btn_id_guest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/editTxt_input_margin_top"
                            android:background="@drawable/btn_default"
                            android:shadowColor="@color/btn_b_textshadow_default"
                            android:shadowDx="1.5"
                            android:shadowDy="1.5"
                            android:shadowRadius="3"
                            android:text="Continue as a guest"
                            android:textColor="@color/btn_txt_color_default" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/main_marginLeft"
                    android:layout_marginRight="@dimen/main_marginRight"
                    android:orientation="vertical">
                    <ImageView

                        android:id="@+id/signin_img_imageView4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:src="@mipmap/ic_login_with_google" />

                    <ImageView

                        android:id="@+id/signin_img_imageView5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_login_with_fb" />
                    </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>