<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sublayer_itembg_orderhistory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sublayer_itembg" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp" >

            <ImageView
                android:id="@+id/syblayer4_3str_2pic_imageView1"
                android:layout_width="105dp"
                android:layout_height="75dp"
                android:paddingBottom="5dp"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_demo" />

            <ImageView
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_location_icon" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/syblayer4_3str_2pic_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/action_settings_txt1"
                android:textSize="@dimen/sublayer_3str_2pic_txtSiz_txt1" />

            <TextView
                android:id="@+id/syblayer4_3str_2pic_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:text="@string/action_settings_txt2"
                android:textColor="@color/sublayer_text2"
                android:textSize="@dimen/sublayer_3str_2pic_txtSiz_txt2" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/syblayer4_3str_2pic_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:lines="1"
            android:textColor="@color/actionbar_backgrounf"
            android:text="@string/action_settings_txt3"
            android:textSize="@dimen/sublayer_3str_2pic_txtSiz_txt3" />


        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@drawable/ic_arrow"
            android:id="@+id/btnOrderHistryItemView"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@drawable/ic_cancele_item"
            android:id="@+id/btnOrderHistryItemDelete"
             />
    </LinearLayout>



</RelativeLayout>